//- Mixin
mixin card(project)
    .col-xs-12.col-sm-12.col-lg-4.d-flex.my-1.p-2
        .card.m-auto.h-100.box-shadow
          img.card-img.img-responsive(src=`Assets/${project.img}.jpg`)
          .card-img-overlay
            .card-header.card__header.container-fluid
              h2.card-title= project.name
              ul.card__links.card-subtitle
              if project.figma_link != "#"
                li.list-unstyled
                  a.link(href=`${project.figma_link}` target='_blank') Figma    
              if project.github_link != "#"
                li.list-unstyled
                  a.link(href=`https://${project.github_link}` target='_blank') Github    
              if project.website_link != "#"
                li.list-unstyled
                  a.link(href=`https://${project.website_link}` target='_blank') Website    
            .container-fluid.card-footer.card__desc.d-flex.justify-content-between
              p= project.desc
              a.px-2.card__link(href=`${project.page_link}` target='_blank')
                img(src='/Assets/keyboard-right-arrow-button.svg' alt=' button' height='32px')



